---
layout: null
---
{
	"code":0,
	"data":[
		{% for post in site.posts %}
		{
			"id":"{{ post.id }}",
			"title":"{{ post.title }}",
			"summary":"{{ post.excerpt | strip_html }}",
			"date":"{{ post.date }}",
			"tag":[
				{% for tag in post.tags %}
					"{{ tag }}"
					{% unless forloop.last %}
					 ,
					{% endunless %}
				{% endfor %}
				],
			"category":"{{ post.categories }}",
			{% if forloop.last %}
			 } 
			{% else %}
			 }, 
			{% endif %}
		{% endfor %}
	]
}
